<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LEGO Lab - All Builds</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <!-- Nav Bar -->
    <header>
      <nav>
        <span class="title">
          <img
            src="/images/lego-lab-logo.png"
            alt="LEGO Lab Logo"
            class="logo"
          />
          <h1>LEGO LAB</h1>
        </span>
        <ul>
          <li><a href="/logout">Sign Out</a></li>
          <li><a href="/dashboard">My Inventory</a></li>
          <li><a href="/all-builds">All Builds</a></li>
          <li><a href="/all-parts">All Parts</a></li>
          <li><a href="/builder">Builder</a></li>
        </ul>
      </nav>
    </header>

    <!-- Main -->
    <main class="all-builds-page">
      <!-- Sidebar -->
      <aside class="sidebar">
        <div class="filter-section">
          <h3>Search Builds</h3>
          <input
            type="text"
            class="search-input"
            id="build-name"
            placeholder="Search by name"
          />
          <select id="build-theme" class="theme-select">
            <option value="" disabled selected>Select a theme</option>
            <!-- Options will be dynamically populated -->
          </select>
          <button id="search-btn" class="filter-btn">Search</button>
        </div>
      </aside>

      <!-- Builds List -->
      <section class="builds-list-section">
        <h2>All Builds</h2>
        <div id="builds-container">
          <!-- Builds will be dynamically loaded here -->
        </div>
        <div class="pagination" id="pagination-controls">
          <button id="prev-page" disabled>Previous</button>
          <span id="page-info"></span>
          <button id="next-page">Next</button>
        </div>
      </section>
    </main>

    <script src="/js/all-builds.js"></script>
  </body>
</html>
